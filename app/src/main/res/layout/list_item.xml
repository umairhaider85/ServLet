<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/accent_color"
    >

    <ImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:id="@+id/post_image"/>


    <!--2 TextView Holder starts-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/post_name"
            android:layout_width="match_parent"
            android:textColor="@color/icon_text"
            android:layout_height="@dimen/person_name_textview_height"
            android:textSize="@dimen/postname_textsize"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceSmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/person_description_textview_height"
            android:textSize="@dimen/postdetail_textsize"
            android:textColor="@color/icon_text"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="2"
            android:lines="2"
            android:textAppearance="?android:textAppearanceSmall" />

    </LinearLayout>
    <!--2 TextVeiew Holder Ends here-->

</LinearLayout>